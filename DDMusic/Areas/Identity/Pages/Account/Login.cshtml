<section class="login-area section-padding-100">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-lg-8">
                <div class="login-content">
                    <h3>Đăng nhập</h3>
                    <!-- Login Form -->
                    <div class="login-form">
                        <form id="account" method="post">
                            @*<div asp-validation-summary="All" class="text-danger"></div>*@
                            @ViewData["eLogin"]
                            <div class="form-group">
                                <label asp-for="Input.UserNameOrEmail"></label>
                                <input asp-for="Input.UserNameOrEmail" class="form-control" placeholder="Nhập UeseName hoặc Email" />
                                <span asp-validation-for="Input.UserNameOrEmail" class="text-danger"></span>
                                <span class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Input.Password"></label>
                                <input asp-for="Input.Password" class="form-control" placeholder="Mật khẩu" />
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <div class="checkbox">
                                    <label asp-for="Input.RememberMe">
                                        <input asp-for="Input.RememberMe" />
                                        @Html.DisplayNameFor(m => m.Input.RememberMe)

                                        <a style="padding-left:200px;" id="forgot-password" asp-page="./ForgotPassword">Quên mật khẩu?</a>|
                                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Tạo tài khoản mới.</a>

                                    </label>

                                </div>
                            </div>
                            <div class="form-group">
                                <center>   <button type="submit" class="btn btn-primary form-control">Đăng nhập</button></center>
                            </div>

                            @*<div class="form-group">
                                    <label for="username">Tên đăng nhập</label>
                                    <input type="text" class="form-control" id="username" aria-describedby="emailHelp" placeholder="Tên đăng nhập">
                                </div>
                                <div class="form-group">
                                    <label for="password">Mật khẩu</label>
                                    <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Mật khẩu">
                                </div>
                                <button type="submit" class="btn oneMusic-btn mt-30">Đăng nhập</button>*@
                        </form>
                        @{
                            if ((Model.ExternalLogins?.Count ?? 0) == 0)
                            {
                                <div>
                                    <p>
                                        Phần này chưa cấu hình đăng ký từ dịch vụ ngoài.
                                        See <a href="https://go.microsoft.com/fwlink/?LinkID=532715">this article</a>
                                    </p>
                                </div>
                            }
                            else
                            {
                                <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                                    <div>
                                        <p>
                                            Hoặc đăng nhập bằng&ensp;
                                            @foreach (var provider in Model.ExternalLogins)
                                            {
                                                @if (provider.Name == "Google")
                                                {
                                                    <button type="submit" class="btn btn-danger" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account"><i class="fa fa-google"></i> @provider.DisplayName</button>}
                                                else
                                                {
                                                    <button type="submit" class="btn btn-primary" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account"><i class="fa fa-facebook"></i> @provider.DisplayName</button>
                                                }
                                            }
                                        </p>
                                    </div>
                                </form>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
