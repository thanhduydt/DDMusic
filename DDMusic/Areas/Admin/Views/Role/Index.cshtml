@model DDMusic.Areas.Admin.Controllers.RoleController
<style>
    .c {
        width: 150px;
    }
</style>
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Users</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a asp-action="Users">Users</a></li>
                        <li class="breadcrumb-item active"></li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">

                        <!-- /.card-header -->
                        <div class="card-body">
                            <a class="btn btn-success btn-xs" asp-action="CreateRole" asp-controller="Role">Thêm<i title="Thêm" class="nav-icon fas fa-plus"></i></a>
                           <br /><br />
                            <table id="example1" class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Tên</th>
                                        <th class="c">Thao tác</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (ViewBag.listRole != null)
                                    {
                                        foreach (var role in ViewBag.listRole)
                                        {
                                            <tr>

                                                <td>@role.Id</td>
                                                <td>@role.Name</td>

                                                <td>
                                                    <a class="btn btn-info btn-xs" asp-controller="Role" asp-action="EditRole" asp-route-id="@role.Id">Cập nhật <i title="Cập nhật" class="nav-icon fas fa-edit"></i></a>
                                                    <a class="btn btn-danger btn-xs" asp-controller="Role" asp-action="DeleteRole" asp-route-id="@role.Id" onclick="return confirm('Bạn có muốn xóa không?');">Xóa <i title="Xóa" class="fas fa-trash-alt"></i></a>
                                                </td>
                                            </tr>
                                        }
                                    }
                                </tbody>

                            </table>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>