@model DDMusic.Areas.Admin.Models.ChangePasswordAModel
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Change Password</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a asp-action="Users">Users</a></li>
                        <li class="breadcrumb-item active">Change Password</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <!-- left column -->
                <div class="col-md-12">
                    <!-- general form elements -->
                    <div class="card card-primary">

                        <!-- /.card-header -->
                        <!-- form start -->
                        <form asp-area="Admin" asp-controller="Users" asp-action="ChangePassword" enctype="multipart/form-data">
                            @if (ViewBag.Success != null)
                            {
                                <div>
                                <center><span class="badge badge-danger">@ViewBag.Success</span></center>
                                </div>
                                <br />
                            }
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6 ">
                                        <div class="form-group wow fadeInUp" data-wow-delay="100ms">
                                            <label asp-for="EmailOrUserName"></label>
                                            <input asp-for="EmailOrUserName" type="text" class="form-control" id="username">
                                            @if (ViewBag.eEmailOrUserName != null)
                                            {
                                                <div>
                                                    <span class="badge badge-danger">@ViewBag.eEmailOrUserName</span>
                                                </div>
                                                <br />
                                            }
                                        </div>
                                    </div>
                                    <div class="col-md-6 ">
                                        <div class="form-group wow fadeInUp" data-wow-delay="100ms">
                                            <label asp-for="Password"></label>
                                            <input asp-for="Password" type="text" class="form-control" id="name">
                                        </div>
                                    </div>

                                    <div class="col-12 text-center wow fadeInUp" data-wow-delay="500ms">
                                        <button type="submit" style="width:150px" class="btn btn-primary">Cập nhật</button>
                                        @*<button onclick="'location.href = @Url.Action("Users","Users")'" style="width:100px" class="btn btn-light">Hủy</button>*@
                                    </div>
                                </div>
                            </div>
                        </form>

                    </div>


                </div>
                <!--/.col (left) -->

            </div>
            <!-- /.row -->
        </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
}