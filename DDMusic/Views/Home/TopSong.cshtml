@{
    ViewData["Title"] = "Bảng xếp hạng";
}
<!-- ##### Miscellaneous Area Start ##### -->
<section class="miscellaneous-area section-padding-100-0">
    <div class="container">
        <div class="row">
            <!-- ***** Weeks Top ***** -->
            <div class="col-12 col-lg-6">
                <div class="new-hits-area mb-100">
                    <div class="section-heading text-left mb-50 wow fadeInUp" data-wow-delay="50ms">
                        <h2>Bảng xếp hạng tuần</h2>
                    </div>
                    @if (ViewBag.TopSongOnWeek != null)
                    {
                        foreach (var item in ViewBag.TopSongOnWeek)
                        {
                            <!-- Single Top Item -->
                            <div class="single-new-item d-flex align-items-center justify-content-between wow fadeInUp" data-wow-delay="100ms">
                                <div class="first-part d-flex align-items-center">
                                    <div class="thumbnail">
                                        <img src="~/img/song/@item.Song.URLImg" alt="">
                                    </div>
                                    <div class="content-">
                                        <h6><a href="~/img/song/@item.Song.Id">@item.Song.Name</a></h6>
                                        <p>@item.Song.Singer.Name</p>
                                    </div>
                                </div>
                                @*<audio preload="auto" controls>
                                    <source src="~/audio/@item.Song.URLMusic">
                                </audio>*@
                            </div>
                        }
                    }
                </div>
            </div>
            <!-- ***** New Hits Songs ***** -->
            <div class="col-12 col-lg-6">
