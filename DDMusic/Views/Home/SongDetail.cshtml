<style>
    .divLyric {
        height: auto;
        max-height: 255px;
        overflow: hidden;
    }

    .img-song {
        width: 100px;
        height: 100px;
        border-radius: 10%;
    }

    .title-song {
        margin-top: 10px;
        margin-left: -120px;
    }

    .img-comment {
        width: 60px;
        height: 60px;
        border-radius: 12%;
    }

    .user-name {
        width: 100px;
        margin-left: 10px;
        margin-right: 10px;
        font-weight: 600 !important;
    }

    .user-comment {
        margin-left: 10px;
        font-weight: 400 !important;
    }

    .padding-comment {
        padding-bottom: 10px;
    }

    .comment {
        margin-left: -30px;
    }

